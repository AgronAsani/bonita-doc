<dataConfig>
    <dataSource type="BinFileDataSource" name="book"/>
    <document>
        <entity name="files" dataSource="null" processor="FileListEntityProcessor" rootEntity="false"
                baseDir="/home/julienreboul/workspace-distrib/bonita-doc/md/html" fileName=".*.html" onError="skip">
                <field column="file" name="name" />

                <entity name="documentationFile"
                  processor="TikaEntityProcessor"
                  url="${files.fileAbsolutePath}"
                  format="html" transformer="HTMLStripTransformer,RegexTransformer">
                  <field column="text" name="content" stripHTML="true" regex="\s{2,}" replaceWith=" "/>
                </entity>
        </entity>
    </document>
</dataConfig>
